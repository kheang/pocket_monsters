<%= form_for monster do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :cp %>:
  <%= f.text_field :cp %><br />

  <%= f.label :monster_type %>:
  <%= f.text_field :monster_type %><br />

  <%= f.label :weight %>:
  <%= f.text_field :weight %><br />

  <%= f.label :height %>:
